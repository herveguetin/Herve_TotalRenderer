<config>
    <modules>
        <Herve_TotalRenderer>
            <version>1.0.0.0</version>
        </Herve_TotalRenderer>
    </modules>
    <global>
        <blocks>
            <totalrenderer>
                <class>Herve_TotalRenderer_Block</class>
            </totalrenderer>
        </blocks>
        <helpers>
            <totalrenderer>
                <class>Herve_TotalRenderer_Helper</class>
            </totalrenderer>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <totalrenderer>
                    <file>totalrenderer.xml</file>
                </totalrenderer>
            </updates>
        </layout>
        <translate>
            <modules>
                <Herve_TotalRenderer>
                    <files>
                        <default>Herve_TotalRenderer.csv</default>
                    </files>
                </Herve_TotalRenderer>
            </modules>
        </translate>
    </frontend>
</config>
